<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Free Academy - Dashboard</title>

<link href="/assets/css/bootstrap.min.css" rel="stylesheet">
<link href="/assets/css/newsfeed.css" rel="stylesheet">
<link href="/assets/css/dashboard.css" rel="stylesheet">
<link href="/assets/css/msc-style.css" rel="stylesheet" type="text/css">

<!--Icons-->
<script src="/assets/js/libs/lumino.glyphs.js"></script>

<!--[if lt IE 9]>
<script src="js/html5shiv.js"></script>
<script src="js/respond.min.js"></script>
<![endif]-->

</head>
<body>
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sidebar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="/"><span>Free Academy</span></a>
			</div>

		</div><!-- /.container-fluid -->
	</nav>

	<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
		<div class="info">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown"><svg class="glyph stroked male-user"><use xlink:href="#stroked-male-user"></use></svg> <eng data=username> </a>
    </div>
		<ul class="nav menu">
			<li><a href="/dashboard"><svg class="glyph stroked dashboard-dial"><use xlink:href="#stroked-dashboard-dial"></use></svg> Dashboard</a></li>
			<li><a href="/dashboard/newsfeed"><svg class="glyph stroked calendar"><use xlink:href="#stroked-calendar"></use></svg> Newsfeed</a></li>
			<li class="active"><a href="/dashboard/question"><span class="glyphicon glyphicon-question-sign"><use xlink:href="#stroked-question-sign"></use></svg> Question</a></li>
		</ul>

	</div><!--/.sidebar-->

	<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
		<div class="row">
			<ol class="breadcrumb">
				<li><a href="/"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
				<li class="active"><a href="/dashboard">dashboard</a></li>
			</ol>
		</div><!--/.row-->

		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Question (<eng data=count_exam>)</h1>
			</div>
		</div><!--/.row-->

		<div class="row">
		    <!-- hien thi tin tuc-->
		    <div class="col-md-8">
		      <div class="row">
		        <div class="panel panel-default">
		          <eng data=exams>
		        </div>
		      </div>
		      <div class="row" id="pagination">
		        <ul class="pagination">
		        </ul>
		      </div>
		   </div>
		   <div class="col-md-4">

		     <div class="panel panel-primary">
		       <div class="panel-heading">Tools</div>
		       <div class="panel-body">
		         <ul>
		           <li id="addnew" class="btn-newsfeed">Add new</li>
		           <li id="chooseall" class="btn-newsfeed">Choose all</li>
		           <li id="dischoose" class="btn-newsfeed">Dischoose all</li>
		           <li id="delete" class="btn-newsfeed" data-target="">Delete rows</li>
		         </ul>
		       </div>
		     </div>
		  </div>
		</div><!--/.row-->
		</div>	<!--/.main-->

	<script src="/assets/js/libs/jquery.min.js"></script>
	<script src="/assets/js/libs/bootstrap.min.js"></script>
	<script src="/assets/js/msc-script.js"></script>
	<script src="/assets/js/pagination.js"></script>
	<script type="text/javascript">
		$(document).ready(function() {
			let hash = '<eng data=hash>';
			$('#addnew').click(function() {
				location.href = 'question?newposts';
			});

			$('a[href^="?method\=delete"]').click(function(e) {
				let $this = $(this);
				mscConfirm("Delete?",function(){
					location.href = $this.attr('href') + '&hash=' + hash;
				});

				e.preventDefault();
			});

			$('input[type="checkbox"]').click(function() {
				let target = $('#delete');
				let id = String(target.attr('data-target')).trim();
				let link = $(this).next().attr('href');

				let href = link.substring(link.lastIndexOf('.') + 1);

				if(id === '') id = href;
				else if(id.indexOf(href) === -1)
					id += ',' + href;
				else
				{
					let pos = id.indexOf(href);
					id = (id.substring(0, pos) + id.substring(pos + 24))
					.replace(/,+,/g,',')
					.replace(/^,]|,$/, '');
				}

				target.attr('data-target', id);
			});

			$('#delete').click(function() {
				let idx = String($(this).attr('data-target')).trim();
				if(idx === '') return;

				let url = '/dashboard/newsfeed?method=delete&id=' + idx + '&hash=' + hash;
				mscConfirm("Delete selected?",function(){
					location.href = url;
				});
			});

			$('#chooseall, #dischoose').click(function() {
				$('input[type="checkbox"]').click();
			});

			let pages = <eng data=pages>;
			let curpage = <eng data=curpage>;
			let pagination = $('.pagination');

			new $Pagination(pagination, pages, curpage).init();
			(function() {

			});
		});
	</script>
</body>
</html>
